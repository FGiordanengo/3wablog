{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <h1>Bienvenue sur notre superbe blog</h1>

    <div class="row">
        {% for article in articles %}
            <div class="col-4">
                <div class="card border-secondary mb-3">
                    <img src="{{ article.image }}" alt="">
                    <div class="card-body">
                        {% for category in article.categories %}
                            <span class="badge badge-primary">{{ category.title }}</span>
                        {% endfor %}
                        <h4 class="card-title">{{ article.title }}</h4>
                        <small>Publié le {{ article.publishedAt | date("d/m/Y à H:i") }}</small>
                        <p class="card-text">{{ article.content }}</p>

                        <a href="{{ path('article_show', {'slug': article.slug}) }}" class="btn btn-link">Lire la suite...</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
