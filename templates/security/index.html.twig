{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <h1>Connexion</h1>

    {% if error %}
        <div class="alert alert-danger">
            {{error.message}}
        </div>
    {% endif %}
    

    <form action="" method="post">
        <div class="form-group"><input type="email" value="{{lastUsername}}" class="form-control" name="_username" placeholder="Adresse Email"></div>
        <div class="form-group"><input type="password" class="form-control" name="_password" placeholder="Mot de passe"></div>
        <button class="btn btn-primary" type="submit">Connexion</button>
    </form>
{% endblock %}
